# Site settings
NEXT_PUBLIC_SITE_URL=https://wallpaperz.in

# Authentication (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# Development keys (for local development only)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY_DEV=pk_test_development_key
CLERK_SECRET_KEY_DEV=sk_test_development_key

# Production keys (for production environment only)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY_PROD=pk_live_production_key
CLERK_SECRET_KEY_PROD=sk_live_production_key

# Image management (ImageKit)
NEXT_PUBLIC_IMAGEKIT_ENDPOINT=your_imagekit_endpoint
NEXT_PUBLIC_IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key

# Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# AI Image Generation
DREAMSTUDIO_API_KEY=your_stability_ai_key

# Clerk Configuration
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# App URL
NEXT_PUBLIC_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000

# Database
DATABASE_URL=your_database_url

# API Keys
NEXT_PUBLIC_PEXELS_API_KEY=your_pexels_api_key

# OAuth
GITHUB_ID=your_github_id
GITHUB_SECRET=your_github_secret
GOOGLE_ID=your_google_id
GOOGLE_SECRET=your_google_secret

# Next Auth Configuration
NEXTAUTH_SECRET=your_nextauth_secret

# Additional Configuration
NODE_ENV=development

# Admin Users (comma-separated Clerk user IDs)
ADMIN_USER_IDS=user_id1,user_id2
